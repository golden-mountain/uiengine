{
  "compilerOptions": {
    "module": "amd",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "tsx",
    "target": "es6",
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "lib": ["es2015", "es2016"]
  },
  "include": ["./src/*"],
  "exclude": ["node_modules"]
}
